<h2>Add new Project</h2> 


<%= form_for @project do |f| %>
	<% if @project.errors.any? %>
		<div class = "errors" style = "color: red;">
			<h3>These errors prohibitted the form from being saved: </h3>
			<ul>
				<% @project.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.label :name %><br/>
	<%= f.text_field :name %><br/>
	<%= f.label :description %><br/>
	<%= f.text_area :description %><br/>
	<%= f.label :start_date %><br/>
	<%= f.date_select :start_date, order: [:day, :month, :year] %><br/><br/>
	<%= f.label :client_id %><br/>
	<%= f.collection_select :client_id, current_user.clients, :id, :name, promot: "select client" %><br/>
	<!--
	<%= f.label :status %>
	<%= f.select :status, ["new", "on-going", "completed"], promot: "select status" %>
	-->
	<%= f.label :status %><br/>
	<%= f.radio_button :status, "new" %> New <br/>
	<%= f.radio_button :status, "on-going" %> On-going <br/>
	<%= f.radio_button :status, "completed" %> Completed <br/>
	<%= f.label :categories %><br/>
	<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br/>

	<%= f.submit %>

<% end %>